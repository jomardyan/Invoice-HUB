# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoice_hub
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@invoice-hub.com
SMTP_FROM_NAME=Invoice-HUB

# Email Failover
SMTP_FAILOVER_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_FAILOVER_PORT=587
SMTP_FAILOVER_USER=your-aws-ses-key
SMTP_FAILOVER_PASSWORD=your-aws-ses-secret

# Allegro API
ALLEGRO_CLIENT_ID=your-allegro-client-id
ALLEGRO_CLIENT_SECRET=your-allegro-client-secret
ALLEGRO_REDIRECT_URI=http://localhost:3000/api/v1/integrations/allegro/callback
ALLEGRO_SANDBOX=true
ALLEGRO_API_URL=https://api.allegro.pl.allegrosandbox.pl

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AWS S3 (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
FEATURE_ALLEGRO_INTEGRATION=true
FEATURE_MFA=true
FEATURE_WEBHOOKS=true
