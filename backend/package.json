{
  "name": "invoice-hub-backend",
  "version": "1.0.0",
  "description": "Invoice-HUB - SaaS invoicing platform for Polish e-commerce businesses",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:api": "./test-api.sh",
    "test:quick": "./quick-test.sh",
    "test:all": "npm run test && npm run test:api",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migrate": "npm run migration:run",
    "backup": "echo 'Database backup would be performed here'",
    "restore": "echo 'Database restore would be performed here'"
  },
  "keywords": [
    "invoice",
    "saas",
    "allegro",
    "vat",
    "polish",
    "e-commerce"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "latest",
    "@sentry/profiling-node": "latest",
    "@types/stripe": "latest",
    "@types/swagger-jsdoc": "latest",
    "@types/swagger-ui-express": "latest",
    "axios": "latest",
    "bcryptjs": "latest",
    "bullmq": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "compression": "latest",
    "cors": "latest",
    "date-fns": "latest",
    "dotenv": "latest",
    "exceljs": "latest",
    "express": "latest",
    "express-rate-limit": "latest",
    "express-validator": "latest",
    "handlebars": "latest",
    "helmet": "latest",
    "jsonwebtoken": "latest",
    "morgan": "latest",
    "multer": "latest",
    "nodemailer": "latest",
    "otplib": "latest",
    "puppeteer": "latest",
    "qrcode": "latest",
    "redis": "latest",
    "sqlite": "^5.1.1",
    "stripe": "latest",
    "swagger-jsdoc": "latest",
    "swagger-ui-express": "latest",
    "typeorm": "latest",
    "uuid": "latest",
